{
  "name": "Emoji Collector",
  "version": "1.0",
  "version_name": "1.0 Emoji Collector alpha",
  "description": "Collect all of the Emojis",
  "manifest_version": 2,
  "icons": {
    "16": "assets/logos/LOGO-16.png",
    "48": "assets/logos/LOGO-48.png",
    "128": "assets/logos/LOGO-128.png"
  },
  "background": {
    "scripts": ["data.js", "background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["assets/content.css"],
      "js": ["data.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Emoji Collector"
  },
  "permissions": ["tabs", "storage"]
}
